<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>netstandard2.0;net452</TargetFrameworks>
		<PlatformTarget>x86</PlatformTarget>
		<Version>0.1.0</Version>
		<Authors>BigBang1112</Authors>
		<Product>Nations Converter</Product>
		<PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
		<ApplicationIcon>favicon.ico</ApplicationIcon>
	</PropertyGroup>

	<ItemGroup>
		<Content Include="Sheets\**">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</Content>
		<Content Include="Macroblocks\**">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</Content>
		<Content Include="UserData\**">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</Content>
	</ItemGroup>

	<ItemGroup>
	  <Compile Remove="Sheets\SheetManager.cs" />
	</ItemGroup>

	<ItemGroup>
	  <None Remove="UserData\Items\NationsConverter\r_support\v_control\ControlGlassBaseAir.Item.Gbx" />
	  <None Remove="UserData\Items\NationsConverter\r_support\v_control\ControlGlassCornerAir.Item.Gbx" />
	  <None Remove="UserData\Items\NationsConverter\r_support\v_control\ControlGlassDeadendAir.Item.Gbx" />
	  <None Remove="UserData\Items\NationsConverter\r_support\v_control\ControlGlassStraightAir.Item.Gbx" />
	  <None Remove="UserData\Items\NationsConverter\r_support\x_pipe\StructureGround.Item.Gbx" />
	</ItemGroup>

	<ItemGroup>
	  <Content Include="Sheet.cs" />
	  <Content Include="SheetManager.cs" />
	</ItemGroup>

	<ItemGroup>
	  <PackageReference Include="GBX.NET" Version="0.5.3" />
	  <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
	  <PackageReference Include="YamlDotNet" Version="9.1.0" />
	</ItemGroup>

	<ItemGroup>
	  <Compile Update="Resources.Designer.cs">
	    <DesignTime>True</DesignTime>
	    <AutoGen>True</AutoGen>
	    <DependentUpon>Resources.resx</DependentUpon>
	  </Compile>
	</ItemGroup>

	<ItemGroup>
	  <EmbeddedResource Update="Resources.resx">
	    <Generator>PublicResXFileCodeGenerator</Generator>
	    <LastGenOutput>Resources.Designer.cs</LastGenOutput>
	  </EmbeddedResource>
	</ItemGroup>
</Project>
